.toast {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  z-index: 999;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
  border-radius: 5px;
  padding: 15px 30px;
  align-items: center;
  color: #fff;
  white-space: nowrap;
  transition: all .5s;
  transform: translate(-50%, -50%) translateY(30px);
  opacity: 0
}

.toast-info {
  background-color: #6b9eee
}

.toast-success {
  background-color: #7ebf50
}

.toast-error {
  background-color: #cc3600
}

.toast-warn {
  background-color: #dc6a12
}

.icon {
  font-size: 20px;
  margin-right: 7px
}